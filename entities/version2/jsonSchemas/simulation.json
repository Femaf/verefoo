{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Simulation",
    "definitions": {
        "hosts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "supportedVNFTypes": {
                        "type": "array",
                        "items": {
                            "existingJavaType": "it.polito.verefoo.pojo.FunctionalType"
                        }
                    },
                    "nodeRefs": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "name": {
                        "type": "string"
                    },
                    "cpu": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "cores": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "diskStorage": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "memory": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "maxVNF": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "type": {
                        "enum": [
                            "CLIENT",
                            "SERVER",
                            "MIDDLEBOX"
                        ]
                    },
                    "fixedEndPoint": {
                        "type": "string"
                    },
                    "active": {
                        "type": "boolean",
                        "default": false
                    }
                },
                "required": [
                    "name",
                    "cpu",
                    "cores",
                    "diskStorage",
                    "memory"
                ],
                "additionalProperties": false
            }
        },
        "connections": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "sourceHost": {
                        "type": "string",
                        "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                    },
                    "destinationHost": {
                        "type": "string",
                        "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                    },
                    "averageLatency": {
                        "type": "integer",
                        "minimum": 0
                    }
                },
                "required": [
                    "sourceHost",
                    "destinationHost"
                ],
                "additionalProperties": false
            }
        },
        "networkForwardingPaths": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "pathNodes": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 2
                    }
                },
                "required": [
                    "id"
                ],
                "additionalProperties": false
            }
        }
    },
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "graph": {
                "$ref": "./verigraph.json/#/definitions/graph"
            },
            "substrates": {
                "$comment": "Multiple physical networks may be needed so as to lunch different simulations on different substrates.",
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer"
                        },
                        "hosts": {
                            "$ref": "#/definitions/hosts"
                        },
                        "connections": {
                            "$comment": "List of connections between hosts.",
                            "$ref": "#/definitions/connections"
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "id"
                    ]
                }
            },
            "networkFunctions": {
                "description": "The array of functions that the system can use for each graph.",
                "type": "array",
                "items": {
                    "existingJavaType": "it.polito.verefoo.pojo.FunctionalType"
                }
            },
            "networkForwardingPaths": {
                "$ref": "#/definitions/networkForwardingPaths"
            },
            "parsingString": {
                "$comment": "This property is used by the converter service.",
                "type": "string"
            }
        },
        "additionalProperties": false,
        "required": [
            "graphs",
            "networkFunctions"
        ]
    }
}