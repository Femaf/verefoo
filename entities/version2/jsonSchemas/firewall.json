{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "firewall",
    "type": "object",
    "extends": {
        "$ref": "./verigraph.json/#/definitions/networkFunction"
    },
    "properties": {
        "rules": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "action": {
                        "existingJavaType": "it.polito.verefoo.pojo.ActionType",
                        "default": "DENY"
                    },
                    "sourceAddress": {
                        "type": "string",
                        "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                    },
                    "destinationAddress": {
                        "type": "string",
                        "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                    },
                    "protocol": {
                        "existingJavaType": "it.polito.verefoo.pojo.LevelFourProtocolType",
                        "default": "ANY"
                    },
                    "sourcePort": {
                        "type": "number"
                    },
                    "destinationPort": {
                        "type": "number"
                    },
                    "directional": {
                        "type": "boolean",
                        "default": true
                    }
                },
                "required": [
                    "source",
                    "destination"
                ],
                "additionalProperties": false
            },
            "minItems": 1
        },
        "defaultAction": {
            "existingJavaType": "it.polito.verefoo.pojo.ActionType"
        }
    },
    "additionalProperties": false
}