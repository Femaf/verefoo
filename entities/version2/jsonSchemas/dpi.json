{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "dpi",
    "type": "object",
    "extends": {
        "$ref": "./verigraph.json/#/definitions/networkFunction"
    },
    "properties": {
        "dpiRules": {
            "type": "array",
            "$comment": "The set of actions to take when a certain condition string is present in the packet",
            "items": {
                "type": "object",
                "properties": {
                    "action": {
                        "existingJavaType": "it.polito.verefoo.pojo.ActionType",
                        "default": "DENY"
                    },
                    "condition": {
                        "$comment": "Which string is not allowed in a packet",
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },
        "defaultAction": {
            "existingJavaType": "it.polito.verefoo.pojo.ActionType"
        }
    },
    "additionalProperties": false
}