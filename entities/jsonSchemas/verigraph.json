{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "verigraph",
    "definitions": {
        "nodeConstraints": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "node": {
                        "type": "string"
                    },
                    "numberOfOperations": {
                        "type": "number"
                    },
                    "maxNodeLatency": {
                        "type": "number"
                    },
                    "requestStorage": {
                        "type": "number",
                        "default": 0
                    },
                    "cores": {
                        "type": "number",
                        "default": 0
                    },
                    "memory": {
                        "type": "number",
                        "default": 0
                    },
                    "optional": {
                        "type": "boolean",
                        "default": false
                    }
                },
                "required": [
                    "node"
                ],
                "additionalProperties": false
            }
        },
        "linkConstraints": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "source": {
                        "type": "string"
                    },
                    "destination": {
                        "type": "string"
                    },
                    "requestLatency": {
                        "type": "number"
                    }
                },
                "required": [
                    "source",
                    "destination",
                    "requestLatency"
                ],
                "additionalProperties": false
            }
        },
        "allocationConstraints": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "existingJavaType": "it.polito.verefoo.pojo.AllocationConstraintType"
                    },
                    "nodeA": {
                        "type": "string"
                    },
                    "nodeB": {
                        "type": "string"
                    }
                },
                "required": [
                    "type",
                    "nodeA",
                    "nodeB"
                ],
                "additionalProperties": false
            }
        },
        "graph": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "serviceGraph": {
                    "type": "boolean",
                    "default": false
                },
                "nodes": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/node"
                    },
                    "minItems": 1
                },
                "constraints": {
                    "type": "object",
                    "properties": {
                        "nodeConstraints": {
                            "$ref": "#/definitions/nodeConstraints"
                        },
                        "linkConstraints": {
                            "$ref": "#/definitions/linkConstraints"
                        },
                        "allocationConstraints": {
                            "$ref": "#/definitions/allocationConstraints"
                        }
                    },
                    "required": [
                        "nodeConstraints",
                        "linkConstraints"
                    ]
                },
                "requirements": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/requirement"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "id",
                "nodes"
            ],
            "additionalProperties": false
        },
        "node": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "address": {
                    "type": "string",
                    "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                },
                "functionalType": {
                    "existingJavaType": "it.polito.verefoo.pojo.FunctionalType",
                    "$comment": "This value is optional because the network function of the node can be derived from the name of the pertinent property inside the configuration property. Nevertheless, having the network function's name as a value rather than as a property name is more comfortable."
                },
                "configuration": {
                    "$ref": "#/definitions/configuration"
                },
                "neighbours": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/neighbour"
                    }
                }
            },
            "required": [
                "id",
                "address"
            ],
            "additionalProperties": false
        },
        "neighbour": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "address": {
                    "type": "string",
                    "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                }
            },
            "$comment": "The address property is optional here, unlike the node's definition, because it can be easily retrieved from the node itself.",
            "required": [
                "id"
            ],
            "additionalProperties": false
        },
        "configuration": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "networkFunction": {
                    "$ref": "#/definitions/networkFunction"
                }
            },
            "required": [
                "id"
            ],
            "additionalProperties": false
        },
        "requirement": {
            "type": "object",
            "properties": {
                "name": {
                    "enum": [
                        "Isolation",
                        "Reachability"
                    ]
                },
                "source": {
                    "type": "string"
                },
                "destination": {
                    "type": "string"
                },
                "levelFourProtocol": {
                    "existingJavaType": "it.polito.verefoo.pojo.LevelFourProtocolType",
                    "default": "ANY"
                },
                "sourcePort": {
                    "type": "string"
                },
                "destinationPort": {
                    "type": "string"
                },
                "isSat": {
                    "type": "boolean"
                },
                "body": {
                    "type": "string"
                },
                "definition": {
                    "existingJavaType": "it.polito.verefoo.pojo.DefinitionType"
                }
            },
            "required": [
                "name",
                "source",
                "destination"
            ],
            "additionalProperties": false
        },
        "networkFunction": {
            "type": "object",
            "properties": {
                "name": {
                    "existingJavaType": "it.polito.verefoo.pojo.FunctionalType"
                }
            },
            "additionalProperties": false
        },
        "paths": {
            "type": "object",
            "oneOf": [
                {
                    "properties": {
                        "source": {
                            "type": "string",
                            "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                        },
                        "destination": {
                            "type": "string",
                            "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                        },
                        "direction": {
                            "type": "string"
                        },
                        "paths": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "minLength": 1
                        }
                    },
                    "required": [
                        "source",
                        "destination",
                        "direction"
                    ],
                    "additionalProperties": false
                },
                {
                    "properties": {
                        "source": {
                            "type": "string",
                            "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                        },
                        "destination": {
                            "type": "string",
                            "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                        },
                        "direction": {
                            "type": "string"
                        },
                        "message": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "source",
                        "destination",
                        "direction"
                    ],
                    "additionalProperties": false
                }
            ]
        }
    },
    "$comment": "Do NOT add properties to this schema: the plugin pojo2 should have a single root element among all schemas, otherwise duplicated classes are generated because referenced twice (or more)."
}