{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "verigraph",
    "definitions": {
        "functionalTypes": {
            "enum": [
                "FIREWALL",
                "ENDHOST",
                "ENDPOINT",
                "ANTISPAM",
                "CACHE",
                "DPI",
                "MAILCLIENT",
                "MAILSERVER",
                "NAT",
                "VPNACCESS",
                "VPNEXIT",
                "WEBCLIENT",
                "WEBSERVER",
                "FIELDMODIFIER",
                "FORWARDER",
                "LOADBALANCER",
                "STATEFUL_FIREWALL",
                "PRIORITY_FIREWALL",
                "WEB_APPLICATION_FIREWALL",
                "TRAFFIC_MONITOR"
            ]
        },
        "protocolTypes": {
            "enum": [
                "HTTP_REQUEST",
                "HTTP_RESPONSE",
                "POP3_REQUEST",
                "POP3_RESPONSE"
            ]
        },
        "actionTypes": {
            "enum": [
                "ALLOW",
                "DENY"
            ]
        },
        "level4ProtocolTypes": {
            "enum": [
                "ANY",
                "TCP",
                "UDP",
                "OTHER"
            ]
        },
        "graph": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "serviceGraph": {
                    "type": "boolean",
                    "default": false
                },
                "nodes": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/node"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "id",
                "nodes"
            ],
            "additionalProperties": false
        },
        "node": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "address": {
                    "type": "string",
                    "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                },
                "functionalType": {
                    "$ref": "#/definitions/functionalTypes",
                    "$comment": "This value is optional because the network function of the node can be derived from the name of the pertinent property inside the configuration property. Nevertheless, having the network function's name as a value rather than as a property name is more comfortable."
                },
                "configuration": {
                    "$ref": "#/definitions/configuration"
                },
                "neighbours": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/neighbour"
                    }
                }
            },
            "required": [
                "id",
                "address"
            ],
            "additionalProperties": false
        },
        "neighbour": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "address": {
                    "type": "string",
                    "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                }
            },
            "$comment": "The address property is optional here, unlike the node's definition, because it can be easily retrieved from the node itself.",
            "required": [
                "id"
            ],
            "additionalProperties": false
        },
        "configuration": {
            "type": "object",
