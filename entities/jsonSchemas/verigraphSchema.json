        "firewall": {
            "type": "object",
            "properties": {
                "rules": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "action": {
                                "$ref": "#/definitions/actionTypes",
                                "default": "DENY"
                            },
                            "sourceAddress": {
                                "type": "string",
                                "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                            },
                            "destinationAddress": {
                                "type": "string",
                                "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                            },
                            "protocol": {
                                "$ref": "#/definitions/level4ProtocolTypes",
                                "default": "ANY"
                            },
                            "sourcePort": {
                                "type": "number"
                            },
                            "destinationPort": {
                                "type": "number"
                            },
                            "directional": {
                                "type": "boolean",
                                "default": true
                            }
                        },
                        "required": [
                            "source",
                            "destination"
                        ],
                        "additionalProperties": false
                    },
                    "minItems": 1
                },
                "defaultAction": {
                    "$ref": "#/definitions/actionTypes"
                }
            },
            "additionalProperties": false
        },
        "statefulFirewall": {
