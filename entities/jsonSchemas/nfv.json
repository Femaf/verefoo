{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "NFV",
    "definitions": {

        "hosts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "supportedVNFTypes": {
                        "type": "array",
                        "items": {
                            "$ref": "./verigraph.json/#/definitions/functionalTypes"
                        }
                    },
                    "nodeRefs": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "name": {
                        "type": "string"
                    },
                    "cpu": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "cores": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "diskStorage": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "memory": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "maxVNF": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "type": {
                        "enum": [
                            "CLIENT",
                            "SERVER",
                            "MIDDLEBOX"
                        ]
                    },
                    "fixedEndPoint": {
                        "type": "string"
                    },
                    "active": {
                        "type": "boolean",
                        "default": false
                    }
                },
                "required": [
                    "name",
                    "cpu",
                    "cores",
                    "diskStorage",
                    "memory"
                ],
                "additionalProperties": false
            }
        },
        "connections": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "sourceHost": {
                        "type": "string",
                        "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                    },
                    "destinationHost": {
                        "type": "string",
                        "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                    },
                    "averageLatency": {
                        "type": "integer",
                        "minimum": 0
                    }
                },
                "required": [
                    "sourceHost",
                    "destinationHost"
                ],
                "additionalProperties": false
            }
        },
        "networkForwardingPaths": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "pathNodes": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 2
                    }
                },
                "required": [
                    "id"
                ],
                "additionalProperties": false
            }
        },
        "requirement": {
            "type": "object",
            "oneOf": [
                {
                    "properties": {
                        "HTTPDefinition": {
                            "type": "object",
                            "properties": {
                                "url": {
                                    "type": "string"
                                },
                                "domain": {
                                    "type": "string"
                                },
                                "options": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": false
                        },
                        "name": {
                            "enum": [
                                "Isolation",
                                "Reachability"
                            ]
                        },
                        "graphId": {
                            "$comment": "The id which this requirement refers to.",
                            "type": "integer"
                        },
                        "source": {
                            "type": "string"
                        },
                        "destination": {
                            "type": "string"
                        },
                        "level4Protocol": {
                            "$ref": "./verigraph.json/#/definitions/level4ProtocolTypes",
                            "default": "ANY"
                        },
                        "sourcePort": {
                            "type": "string"
                        },
                        "destinationPort": {
                            "type": "string"
                        },
                        "isSat": {
                            "type": "boolean"
                        },
                        "body": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "name",
                        "graph",
                        "source",
                        "destination"
                    ],
                    "additionalProperties": false
                },
                {
                    "properties": {
                        "POP3Definition": {
                            "type": "object",
                            "properties": {
                                "from": {
                                    "type": "string"
                                },
                                "sender": {
                                    "type": "string"
                                },
                                "to": {
                                    "type": "string"
                                },
                                "subject": {
                                    "type": "string"
                                },
                                "contentType": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": false
                        },
                        "name": {
                            "enum": [
                                "Isolation",
                                "Reachability"
                            ]
                        },
                        "graphId": {
                            "type": "integer"
                        },
                        "source": {
                            "type": "string"
                        },
                        "destination": {
                            "type": "string"
                        },
                        "level4Protocol": {
                            "$ref": "./verigraph.json/#/definitions/level4ProtocolTypes",
                            "default": "ANY"
                        },
                        "sourcePort": {
                            "type": "string"
                        },
                        "destinationPort": {
                            "type": "string"
                        },
                        "isSat": {
                            "type": "boolean"
                        },
                        "body": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "name",
                        "graph",
                        "source",
                        "destination"
                    ],
                    "additionalProperties": false
                }
            ]
        }
    },
    "type": "object",
    "properties": {
        "graphs": {
            "type": "array",
            "items": {
                "$ref": "./verigraph.json/#/definitions/graph"
            }
        },
        "requirements": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/requirement"
            },
            "minItems": 1
        },
        "substrates": {
            "$comment": "Multiple physical networks may be needed so as to lunch different simulations on different substrates.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "hosts": {
                        "$ref": "#/definitions/hosts"
                    },
                    "connections": {
                        "$comment": "List of connections between hosts.",
                        "$ref": "#/definitions/connections"
                    }
                },
                "additionalProperties": false,
                "required": ["id"]
            }
        },
        "networkForwardingPaths": {
            "$ref": "#/definitions/networkForwardingPaths"
        },
        "parsingString": {
            "$comment": "This property is used by the converter service.",
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
        "graphs",
        "requirements"
    ]
}