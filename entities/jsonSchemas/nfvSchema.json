{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "NFV",
    "definitions": {
        "allocationConstraintType": {
            "enum": [
                "forbidden",
                "forced"
            ]
        },
        "nodeConstraints": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "node": {
                        "type": "string"
                    },
                    "numberOfOperations": {
                        "type": "number"
                    },
                    "maxNodeLatency": {
                        "type": "number"
                    },
                    "requestStorage": {
                        "type": "number",
                        "default": 0
                    },
                    "cores": {
                        "type": "number",
                        "default": 0
                    },
                    "memory": {
                        "type": "number",
                        "default": 0
                    },
                    "optional": {
                        "type": "boolean",
                        "default": false
                    }
                },
                "required": [
                    "node"
                ],
                "additionalProperties": false
            }
        },
        "linkConstraints": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "source": {
                        "type": "string"
                    },
                    "destination": {
                        "type": "string"
                    },
                    "requestLatency": {
                        "type": "number"
                    }
                },
                "required": [
                    "source",
                    "destination",
                    "requestLatency"
                ],
                "additionalProperties": false
            }
        },
        "allocationConstraints": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "$ref": "#/definitions/allocationConstraintType"
                    },
                    "nodeA": {
                        "type": "string"
                    },
                    "nodeB": {
                        "type": "string"
                    }
                },
                "required": [
                    "type",
                    "nodeA",
                    "nodeB"
                ],
                "additionalProperties": false
            }
        },
        "hosts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "supportedVNFTypes": {
                        "type": "array",
                        "items": {
                            "$ref": "./verigraphSchema.json/#/definitions/functionalTypes"
                        }
                    },
                    "nodeRefs": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "name": {
                        "type": "string"
                    },
                    "cpu": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "cores": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "diskStorage": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "memory": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "maxVNF": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "type": {
                        "enum": [
                            "CLIENT",
                            "SERVER",
                            "MIDDLEBOX"
                        ]
                    },
                    "fixedEndPoint": {
                        "type": "string"
                    },
                    "active": {
                        "type": "boolean",
                        "default": false
                    }
                },
                "required": [
                    "name",
                    "cpu",
                    "cores",
                    "diskStorage",
                    "memory"
                ],
                "additionalProperties": false
            }
        },
        "connections": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "sourceHost": {
                        "type": "string",
                        "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                    },
                    "destinationHost": {
                        "type": "string",
                        "pattern": "^([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))([.]([0-9]|([1-9][0-9])|(1[0-9][0-9])|(2[0-4][0-9])|(25[0-5]))){3}$"
                    },
                    "averageLatency": {
                        "type": "integer",
                        "minimum": 0
                    }
                },
                "required": [
                    "sourceHost",
                    "destinationHost"
                ],
                "additionalProperties": false
            }
        },
        "networkForwardingPaths": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "pathNodes": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 2
                    }
                },
                "required": [
                    "id"
                ],
                "additionalProperties": false
            }
        },
        "property": {
            "type": "object",
            "oneOf": [
                {
                    "properties": {
                        "HTTPDefinition": {
                            "type": "object",
                            "properties": {
                                "url": {
                                    "type": "string"
                                },
                                "domain": {
                                    "type": "string"
                                },
                                "options": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": false
                        },
                        "propertyName": {
                            "enum": [
                                "Isolation",
                                "Reachability"
                            ]
                        },
                        "graphId": {
                            "type": "integer"
                        },
                        "source": {
                            "type": "string"
                        },
                        "destination": {
                            "type": "string"
                        },
                        "level4Protocol": {
                            "$ref": "./verigraphSchema.json/#/definitions/level4ProtocolTypes",
                            "default": "ANY"
                        },
                        "sourcePort": {
                            "type": "string"
                        },
                        "destinationPort": {
                            "type": "string"
                        },
                        "isSat": {
                            "type": "boolean"
                        },
                        "body": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "propertyName",
                        "graph",
                        "source",
                        "destination"
                    ],
                    "additionalProperties": false
                },
                {
                    "properties": {
                        "POP3Definition": {
                            "type": "object",
                            "properties": {
                                "from": {
                                    "type": "string"
                                },
                                "sender": {
                                    "type": "string"
                                },
                                "to": {
                                    "type": "string"
                                },
                                "subject": {
                                    "type": "string"
                                },
                                "contentType": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": false
                        },
                        "propertyName": {
                            "enum": [
                                "Isolation",
                                "Reachability"
                            ]
                        },
                        "graphId": {
                            "type": "integer"
                        },
                        "source": {
                            "type": "string"
                        },
                        "destination": {
                            "type": "string"
                        },
                        "level4Protocol": {
                            "$ref": "./verigraphSchema.json/#/definitions/level4ProtocolTypes",
                            "default": "ANY"
                        },
                        "sourcePort": {
                            "type": "string"
                        },
                        "destinationPort": {
                            "type": "string"
                        },
                        "isSat": {
                            "type": "boolean"
                        },
                        "body": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "propertyName",
                        "graph",
                        "source",
                        "destination"
                    ],
                    "additionalProperties": false
                }
            ]
        }
    },
    "type": "object",
    "properties": {
        "graphs": {
            "type": "array",
            "items": {
                "$ref": "./verigraphSchema.json/#/definitions/graph"
            }
        },
        "constraints": {
            "type": "object",
            "properties": {
                "nodeConstraints": {
                    "$ref": "#/definitions/nodeConstraints"
                },
                "linkConstraints": {
                    "$ref": "#/definitions/linkConstraints"
                },
                "allocationConstraints": {
                    "$ref": "#/definitions/allocationConstraints"
                }
            },
            "required": [
                "nodeConstraints",
                "linkConstraints"
            ]
        },
        "propertyDefinitions": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/property"
            },
            "minItems": 1
        },
        "hosts": {
            "$ref": "#/definitions/hosts"
        },
        "connections": {
            "$comment": "List of connections between hosts.",
            "$ref": "#/definitions/connections"
        },
        "networkForwardingPaths": {
            "$ref": "#/definitions/networkForwardingPaths"
        },
        "parsingString": {
            "$comment": "This property is used by the converter service.",
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
        "graphs",
        "propertyDefinitions"
    ]
}