{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "paths": {
            "type": "object",
            "properties": {
                "source": {
                    "type": "string"
                },
                "destination": {
                    "type": "string"
                },
                "direction": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                },
                "path": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "path": {
                                "type": "string"
                            }
                        }
                    },
                    "minItems": 1
                }
            },
            "required": ["source", "destination", "direction"]
        }
    }
}