{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer"
        },
        "serviceGraph": {
            "type": "boolean",
            "$comment": "Regarding translation of XSDs, should the default value be false or 'false'?",
            "default": false
        },
        "node": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "functional_type": {
                        "existingJavaType": "it.polito.verefoo.pojo.FunctionalTypes"
                    },
                    "neighbour": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "integer"
                                },
                                "name": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "name"
                            ]
                        }
                    },
                    "configuration": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "integer"
                            },
                            "name": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string"
                            },
                            "firewall": {
                                "existingJavaType": "it.polito.verefoo.pojo.Firewall"
                            },
                            "endhost": {
                                "existingJavaType": "it.polito.verefoo.pojo.Endhost"
                            },
                            "endpoint": {
                                "existingJavaType": "it.polito.verefoo.pojo.Endpoint"
                            },
                            "antispam": {
                                "existingJavaType": "it.polito.verefoo.pojo.Antispam"
                            },
                            "cache": {
                                "existingJavaType": "it.polito.verefoo.pojo.Cache"
                            },
                            "dpi": {
                                "existingJavaType": "it.polito.verefoo.pojo.Dpi"
                            },
                            "mailclient": {
                                "existingJavaType": "it.polito.verefoo.pojo.Mailclient"
                            },
                            "mailserver": {
                                "existingJavaType": "it.polito.verefoo.pojo.Mailserver"
                            },
                            "nat": {
                                "existingJavaType": "it.polito.verefoo.pojo.Nat"
                            },
                            "vpnaccess": {
                                "existingJavaType": "it.polito.verefoo.pojo.Vpnaccess"
                            },
                            "vpnexit": {
                                "existingJavaType": "it.polito.verefoo.pojo.Vpnexit"
                            },
                            "webclient": {
                                "existingJavaType": "it.polito.verefoo.pojo.Webclient"
                            },
                            "webserver": {
                                "existingJavaType": "it.polito.verefoo.pojo.Webserver"
                            },
                            "fieldmodifier": {
                                "existingJavaType": "it.polito.verefoo.pojo.Fieldmodifier"
                            },
                            "forwarder": {
                                "existingJavaType": "it.polito.verefoo.pojo.Forwarder"
                            },
                            "loadbalancer": {
                                "existingJavaType": "it.polito.verefoo.pojo.Loadbalancer"
                            },
                            "stateful_firewall": {
                                "existingJavaType": "it.polito.verefoo.pojo.StatefulFirewall"
                            },
                            "web_application_firewall": {
                                "existingJavaType": "it.polito.verefoo.pojo.WebApplicationFirewall"
                            }
                        },
                        "required": [
                            "name"
                        ]
                    }
                },
                "required": [
                    "name"
                ]
            }
        }
    }
}