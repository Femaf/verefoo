            <NodeMetrics node="node1" reqStorage="10"/>
            <NodeMetrics node="node2" reqStorage="10"/>
        </NodeConstraints>
        <LinkConstraints/>
    </Constraints>
    <PropertyDefinition>
        <Property name="ReachabilityProperty" graph="0" src="nodeA" dst="nodeB"/>
    </PropertyDefinition>
    <Hosts>
        <Host name="hostA" cpu="2" cores="2" diskStorage="10" memory="16" type="CLIENT" fixedEndpoint="nodeA"/>
        <Host name="host1" cpu="1" cores="4" diskStorage="50" memory="16" maxVNF="1" type="MIDDLEBOX">
            <SupportedVNF functional_type="FIREWALL"/>
            <SupportedVNF functional_type="CACHE"/>
            <SupportedVNF functional_type="FIELDMODIFIER"/>
            <SupportedVNF functional_type="VPNACCESS"/>
            <SupportedVNF functional_type="VPNEXIT"/>
        </Host>
